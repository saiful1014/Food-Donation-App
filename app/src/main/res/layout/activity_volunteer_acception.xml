<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#97CAA3"
    android:orientation="vertical"
    android:weightSum="2"
    tools:context=".volunteer.VolunteerAcception">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:gravity="center">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="103dp"
                            android:text="@string/thankyouVol"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="italic" />


                </LinearLayout>
                <LinearLayout
                    android:layout_weight="3"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:weightSum="4"
                    android:layout_height="0dp">

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp">
                                <TextView
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    android:text="phone"
                                    android:layout_width="200dp"
                                    android:layout_height="match_parent"/>
                                <TextView
                                    style="bold"
                                    android:gravity="center"
                                    android:text="01735208731"
                                    android:layout_width="200dp"
                                    android:layout_height="match_parent"/>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp">
                                <TextView
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    android:text="Email"
                                    android:layout_width="200dp"
                                    android:layout_height="match_parent"/>
                                <TextView
                                    android:textStyle="italic"
                                    android:gravity="center"
                                    android:textSize="15sp"
                                    android:text="abcd@gmail.com"
                                    android:layout_width="200dp"
                                    android:layout_height="match_parent"/>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp">
                                <TextView
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    android:text="Address"
                                    android:layout_width="200dp"
                                    android:layout_height="match_parent"/>
                                <TextView
                                    android:textStyle="bold"
                                    android:gravity="center"
                                    android:text="CSE,SUST,SYLHET"
                                    android:layout_width="200dp"
                                    android:layout_height="match_parent"/>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp">
                                <TextView
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    android:text="IDENTITY"
                                    android:layout_width="200dp"
                                    android:layout_height="match_parent"/>
                                <TextView
                                    android:textStyle="bold"
                                    android:gravity="center"
                                    android:text="YES"
                                    android:layout_width="200dp"
                                    android:layout_height="match_parent"/>


                        </LinearLayout>







                </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="2"
            android:orientation="vertical">



                <TextView
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Comment"
                    android:id="@+id/commentDonar"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_height="0dp">

                   <Button
                       android:textSize="15sp"
                       android:text="IGNORE "
                       android:backgroundTint="#E80D0D"
                       android:layout_marginLeft="25dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>
                        <Button
                       android:textSize="15sp"
                       android:text="ACCEPT "
                       android:backgroundTint="#096106"
                       android:layout_marginLeft="25dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>
                        <Button
                       android:textSize="15sp"
                       android:text="DONATE "
                       android:backgroundTint="#EFD032"
                       android:layout_marginLeft="25dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>



                </LinearLayout>





        </LinearLayout>


</LinearLayout>